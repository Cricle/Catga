{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**/Catga*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "src/Catga.SourceGenerator/**",
            "src/Catga.Cli/**"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "properties": {
        "TargetFramework": "net9.0"
      }
    }
  ],
  "build": {
    "markdownEngineName": "markdig",
    "markdownEngineProperties": {
      "noYamlHeader": true
    },
    "content": [
      {
        "files": [
          "docs/toc.yml"
        ]
      },
      {
        "files": [
          "docs/**.md",
          "docs/**/*.md"
        ],
        "exclude": [
          "docs/web/**",
          "**/node_modules/**",
          "**/bin/**",
          "**/obj/**"
        ]
      },
      {
        "files": [
          "examples/README.md"
        ]
      },
      {
        "files": [
          "src/Catga.Testing/README.md"
        ]
      },
      {
        "files": [
          "api/**.yml",
          "api/**.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "docs/images/**",
          "docs/web/**",
          "images/**"
        ],
        "exclude": [
          "docs/web/**.md"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "Catga Documentation",
      "_appName": "Catga",
      "_appFooter": "Â© 2025 Catga Framework",
      "_enableSearch": true,
      "_gitContribute": {
        "repo": "https://github.com/Cricle/Catga",
        "branch": "master",
        "apiSpecFolder": "docs/api"
      }
    },
    "template": [
      "default",
      "modern"
    ],
    "postProcessors": [],
    "keepFileLink": false,
    "disableGitFeatures": false,
    "noLangKeyword": false,
    "sitemap": {
      "baseUrl": "https://cricle.github.io/Catga/",
      "priority": 0.5,
      "changefreq": "weekly"
    }
  }
}

