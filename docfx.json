{
  "metadata": [
    {
      "src": [
        {
          "files": ["src/**/Catga*.csproj"],
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "src/Catga.SourceGenerator/**",
            "src/Catga.Cli/**",
            "src/Catga.Hosting.Aspire/**"
          ]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net9.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": ["docs/toc.yml", "docs/**/*.md", "examples/README.md"],
        "exclude": ["docs/web/**", "**/bin/**", "**/obj/**"]
      },
      {
        "files": ["api/**/*.yml", "api/**/*.md"]
      }
    ],
    "resource": [
      {
        "files": ["docs/images/**", "docs/web/**"],
        "exclude": ["docs/web/**/*.md"]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "Catga",
      "_appName": "Catga",
      "_appFooter": "Â© 2025 Catga",
      "_enableSearch": true
    },
    "template": ["default", "modern"]
  }
}
