# =============================================================================
# OrderSystem Environment Configuration
# Copy this file to .env and customize as needed
# =============================================================================

# Application Settings
ASPNETCORE_ENVIRONMENT=Production

# Catga Transport Mode: InMemory | Redis | NATS
CATGA_TRANSPORT=InMemory

# Catga Persistence Mode: InMemory | Redis | NATS | SQLite
CATGA_PERSISTENCE=InMemory

# Redis Connection (when using Redis mode)
REDIS_CONNECTION=localhost:6379

# NATS URL (when using NATS mode)
NATS_URL=nats://localhost:4222

# SQLite Connection (when using SQLite persistence)
SQLITE_CONNECTION=Data Source=orders.db

# Cluster Mode
CLUSTER_ENABLED=false
CLUSTER_NODES=

# Logging
LOG_LEVEL=Information

# OpenTelemetry (optional)
OTEL_ENDPOINT=
