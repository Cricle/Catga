<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- AOT Compatibility -->
    <IsAotCompatible>true</IsAotCompatible>
    <IsTrimmable>true</IsTrimmable>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <EnableSingleFileAnalyzer>true</EnableSingleFileAnalyzer>

    <!-- Suppress IL2026 warnings from System.Text.Json.SourceGeneration accessing Exception.TargetSite -->
    <!-- This is a known issue with JSON Source Generator for Exception types -->
    <!-- InMemory is for development/testing; use MemoryPack for production AOT -->
    <NoWarn>$(NoWarn);IL2026</NoWarn>

    <EnableSourceLink>false</EnableSourceLink>
    <EnableSourceControlManagerQueries>false</EnableSourceControlManagerQueries>

    <!-- Package Info -->
    <PackageId>Catga.Persistence.InMemory</PackageId>
    <Title>Catga InMemory Persistence</Title>
    <Description>In-memory persistence implementations for Catga CQRS framework - includes event store, cache, outbox/inbox, and more</Description>
    <PackageTags>catga;cqrs;in-memory;persistence;event-sourcing;cache;outbox;inbox</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Catga\Catga.csproj" />
    <ProjectReference Include="..\Catga.Transport.InMemory\Catga.Transport.InMemory.csproj" />
  </ItemGroup>

</Project>
