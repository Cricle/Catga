<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>High-performance, 100% AOT-compatible core library for distributed CQRS framework</Description>
		<PackageTags>$(PackageTags);event-sourcing;nats;redis;memorypack;aspnetcore;microservices</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" />
		<PackageReference Include="Polly.RateLimiting" Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0'))" />
		<PackageReference Include="DistributedLock.Core" />
		<None Include="../Catga.SourceGenerator/bin/$(Configuration)/netstandard2.0/Catga.SourceGenerator.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="Catga.Benchmarks" />
		<InternalsVisibleTo Include="Catga.Tests" />
		<InternalsVisibleTo Include="Catga.Cluster" />
		<InternalsVisibleTo Include="Catga.Persistence.InMemory" />
		<InternalsVisibleTo Include="Catga.Persistence.Nats" />
		<InternalsVisibleTo Include="Catga.Persistence.Redis" />
		<InternalsVisibleTo Include="Catga.Transport.InMemory" />
		<InternalsVisibleTo Include="Catga.Transport.Nats" />
		<InternalsVisibleTo Include="Catga.Transport.Redis" />
	</ItemGroup>

</Project>
