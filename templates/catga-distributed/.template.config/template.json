{
  "$schema": "http://json.schemastore.org/template",
  "author": "Catga Contributors",
  "classifications": [ "Web", "API", "Distributed", "CQRS", "Microservice" ],
  "identity": "Catga.Templates.Distributed",
  "name": "Catga Distributed Application",
  "shortName": "catga-distributed",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "CatgaDistributed",
  "preferNameDirectory": true,
  "symbols": {
    "UseNats": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include NATS messaging"
    },
    "UseRedis": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include Redis for caching and distributed lock"
    },
    "UseOutbox": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include Outbox pattern"
    },
    "UseDistributedId": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include distributed ID generation"
    },
    "IncludeDocker": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include Docker and docker-compose files"
    }
  }
}

