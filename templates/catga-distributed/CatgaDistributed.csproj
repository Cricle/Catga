<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <PublishAot>true</PublishAot>
    <InvariantGlobalization>false</InvariantGlobalization>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Catga" Version="*" />
    <PackageReference Include="Catga.SourceGenerator" Version="*" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    <PackageReference Include="Catga.Analyzers" Version="*" PrivateAssets="all" />
    <PackageReference Include="Catga.DistributedId" Version="*" />
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.0" Condition="'$(UseOpenApi)' == 'true'" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.8.0" Condition="'$(UseOpenApi)' == 'true'" />
    <PackageReference Include="AspNetCore.HealthChecks.Redis" Version="8.0.0" Condition="'$(UseRedis)' == 'true'" />
    <PackageReference Include="StackExchange.Redis" Version="2.8.16" Condition="'$(UseRedis)' == 'true'" />
    <PackageReference Include="Catga.Nats" Version="*" Condition="'$(UseNats)' == 'true'" />
  </ItemGroup>

</Project>

