{
  "$schema": "http://json.schemastore.org/template",
  "author": "Catga Contributors",
  "classifications": [ "Web", "Microservice", "CQRS", "Kubernetes" ],
  "identity": "Catga.Templates.Microservice",
  "name": "Catga Microservice",
  "shortName": "catga-microservice",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "CatgaMicroservice",
  "preferNameDirectory": true,
  "symbols": {
    "IncludeK8s": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include Kubernetes manifests"
    },
    "IncludeCI": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include CI/CD (GitHub Actions)"
    },
    "UsePrometheus": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include Prometheus metrics"
    }
  }
}

