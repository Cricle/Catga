    <Compile Remove="Integration/**/*.cs" />
    <Compile Include="Integration/Redis/**/*.cs" />
    <Compile Include="Integration/RedisPersistenceIntegrationTests.cs" />
    <Compile Include="Integration/RedisTransportIntegrationTests.cs" />
    <Compile Include="Integration/Nats/NatsJetStreamFunctionalityTests.cs" />
    <Compile Include="Integration/Nats/NatsConnectionManagementTests.cs" />
